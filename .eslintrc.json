{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "prefer-destructuring": 0,
    "import/prefer-default-export": 0
  },
  "import/resolver": {
    "alias": {
      "map": [
        ["src", "./src"]
      ],
      "extensions": [".js", ".ts", ".json", ".test.js"]
    }
  }
}